<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LostFound" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brunswick_green</item>
        <item name="colorPrimaryVariant">@color/tangerine</item>
        <item name="colorOnPrimary">@color/light_cyan</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/brunswick_green</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.LostFound.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.LostFound.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
<!--    adds a dark background to the action bar-->
    <style name="Theme.LostFound.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
<!--    use this for making popup windows with a light themed overlay-->
</resources>