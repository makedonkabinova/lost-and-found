<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LostFound" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/deep_sea_green</item>
        <item name="colorPrimaryVariant">@color/tealish_green</item>
        <item name="colorOnPrimary">@color/white_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/spiced_pumpkin</item>
        <item name="colorSecondaryVariant">@color/sunset_blaze</item>
        <item name="colorOnSecondary">@color/creamy_peach</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.LostFound.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.LostFound.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
<!--    adds a dark background to the action bar-->
    <style name="Theme.LostFound.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
<!--    use this for making popup windows with a light themed overlay-->
</resources>